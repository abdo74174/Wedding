        .gallery-row {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .gallery-item {
            width: 30%;
            position: relative;
            overflow: hidden; /* Prevent images from overflowing */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Adding a slight shadow */
        }

            .gallery-item img {
                width: 100%;
                height: 250px; /* Fixed height for all images */
                object-fit: cover; /* Ensures the image fills the box without stretching */
                border-radius: 10px;
                transition: transform 0.3s ease;
            }

            .gallery-item:hover img {
                transform: scale(1.05);
            }

            .gallery-item .details {
                position: absolute;
                bottom: 10px;
                left: 10px;
                background: rgba(0, 0, 0, 0.6);
                padding: 10px;
                border-radius: 5px;
                color: #fff;
                width: calc(100% - 20px);
                box-sizing: border-box;
                text-align: left;
            }

                .gallery-item .details h3 {
                    margin: 5px 0;
                    font-size: 18px;
                }

                .gallery-item .details p {
                    font-size: 14px;
                    margin: 5px 0;
                }

                .gallery-item .details .price {
                    font-size: 16px;
                    font-weight: bold;
                    margin-top: 5px;
