    <script>
        // Toggle search input field
        function toggleSearch() {
            const searchInput = document.querySelector('.search-input');
            searchInput.classList.toggle('active');
        }

        // Show Cities based on selected country
        function showCities(country) {
            const cities = {
                egypt: ['Cairo', 'Alexandria', 'Giza', 'Luxor', 'Aswan'],
                usa: ['New York', 'Los Angeles', 'Chicago', 'Miami', 'San Francisco'],
                uk: ['London', 'Manchester', 'Liverpool', 'Birmingham'],
                uae: ['Dubai', 'Abu Dhabi', 'Sharjah', 'Ajman', 'Fujairah']
            };

            let citiesList = cities[country] || [];
            let dropdownContent = document.getElementById('countryDropdown');

            // Clear existing dropdown items
            dropdownContent.innerHTML = `<a href="#" onclick="showCities('egypt')">Egypt</a>
                                                 <a href="#" onclick="showCities('usa')">USA</a>
                                                 <a href="#" onclick="showCities('uk')">UK</a>
                                                 <a href="#" onclick="showCities('uae')">UAE</a>`;

            // Add new cities to the dropdown
            citiesList.forEach(city => {
                let cityElement = document.createElement('a');
                cityElement.textContent = city;
                dropdownContent.appendChild(cityElement);
            });
        }
    </script>

